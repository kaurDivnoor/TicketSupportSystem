<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticket Support System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: 600;
            color: #0d6efd !important;
        }
        .nav-link.active {
            font-weight: 500;
            color: #0d6efd !important;
        }
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.1) !important;
        }
        .badge {
            font-size: 0.8em;
            padding: 0.4em 0.8em;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Tickets" asp-action="Index">
                    <i class="bi bi-ticket-detailed me-2"></i>Ticket Support
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tickets" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                               asp-controller="Tickets" asp-action="Index">
                                <i class="bi bi-list-task me-1"></i>All Tickets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")" 
                               asp-controller="Tickets" asp-action="Create">
                                <i class="bi bi-plus-circle me-1"></i>New Ticket
                            </a>
                        </li>
                    </ul>
                    <form class="d-flex" asp-controller="Tickets" asp-action="Index" method="get">
                        <input class="form-control me-2" type="search" name="searchString" placeholder="Search tickets...">
                        <button class="btn btn-outline-primary" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mt-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2024 - Ticket Support System
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Auto-hide success message after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            var toastEl = document.querySelector('.toast');
            if (toastEl) {
                setTimeout(function() {
                    var toast = new bootstrap.Toast(toastEl);
                    toast.hide();
                }, 5000);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>